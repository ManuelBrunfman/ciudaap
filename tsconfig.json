{
  "extends": "./node_modules/expo/tsconfig.base.json",

  "compilerOptions": {
    "strict": true,

    "jsx": "react-native",

    "target": "es2017",

    "lib": ["es2017", "dom", "dom.iterable", "esnext"],

    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "resolveJsonModule": true,

    "noImplicitAny": false,

    "moduleResolution": "bundler",

    "types": ["react", "react-native", "jest"],
    "noEmit": true,

    "baseUrl": "./",

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "exclude": [
    "node_modules",

    "babel.config.js",

    "metro.config.js",

    "jest.config.js"
  ]
}
